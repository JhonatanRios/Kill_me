<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>

    <!--Links para el Slide-->
    <link rel="stylesheet" type="text/css" href="css/normalize.css" />
    <link rel="stylesheet" type="text/css" href="css/demo.css" />
    <link rel="stylesheet" type="text/css" href="css/component.css" />

    <!--Links para la galeria-->
    <link rel="stylesheet" href="css\baguetteBox.css">

    <!--Links para la Info del libro-->
    <link rel="stylesheet" href="css/styleline.css" media="screen" />

    <!--Links para los efectos del Hover-->
    <link rel="stylesheet" href="css/hover.css">

    <!--Links para los iconos-->
    <link rel="stylesheet" href="css/fontawesome-all.css">

    <!--Links para la tarjeta de caracteristicas-->
    <link rel="stylesheet" type="text/css" href="css/tarjeta-normalize.css" />
    <link rel="stylesheet" type="text/css" href="css/tarjeta-demo.css" />
    <link rel="stylesheet" type="text/css" href="css/tarjeta-component.css" />

    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/reco.css">
    <link rel="stylesheet" href="ccs/reset.css">
</head>

<body>
    <header id="header">
        <nav class="menu">
            <div class="logo">
                <img src="img/logo01.png" alt="">
                <a href="#" class="btn-menu" id="btn-menu">
                    <i class="icono fa fa-bars" aria-hidden="true">
                    </i>
                </a>
            </div>

            <div class="enlaces" id="enlaces">
                <a class="home hvr-underline-from-left" href="/">Home</a>
                <a class="how hvr-underline-from-left" href="/how">How I Am</a>
                <a class="book hvr-underline-from-left" href="/book">Books</a>
                <a class="contact hvr-underline-from-left" href="/reco">Recommended</a>
                <a class="contact hvr-underline-from-left" href="/contact">Contact Me</a>
            </div>
        </nav>
    </header>

    <section class="cuerpo">
        <div class="filtro">
            <h2>Filtrar por marca:</h2>
            <a href="/?marca=Honda">Honda</a>
            <a href="/?marca=Yamaha">Yamaha</a>
            <a href="/">Todas</a>

            <h2>Filtrar por modelo:</h2>
            <a href="/?menor=10000000&mayor=20000000">XRE300</a>
            <a href="/?modelo=Teneré 660">Teneré 660</a>
            <a href="/">Todas</a>

            <br>
            <br>
            <input type="range" name="" id="slider" min="10" max="20">
            <input type="range" name="" id="sliderMax" min="10" max="20">
            <button>Buscar</button>
        </div>
        <div class="libros">
            {{#each libros}}
            <div style="flex: 1 1 40%
             background: #000;">
                <a href="/producto/{{nombre}}">
                    <div style="width:100%;
                                height:200px;
                                background-image: url({{libro}});
                                background-size: contain;
                                background-repeat: no-repeat;"></div>
                    <p>
                        <b>{{paginas}}</b>
                    </p>
                    <p>{{nombre}}</p>
                </a>
            </div>
            {{/each}}
        </div>

    </section>

    <footer>
        <div class="cont-social">
            <a href="#">
                <i id="social-fb" class="fab fa-facebook-f social"></i>
            </a>
            <a href="#">
                <i id="social-tw" class="fab fa-twitter social"></i>
            </a>
            <a href="#">
                <i id="social-gp" class="fab fa-google-plus-g social"></i>
            </a>
            <a href="#">
                <i id="social-em" class="fas fa-envelope social"></i>
            </a>
        </div>
    </footer>

    <script>
        console.log('hola cliente');
        var slider = document.querySelector('#slider');
        var sliderMax = document.querySelector('#sliderMax');
        document.querySelector('button').addEventListener('click', function (e) {
            e.preventDefault();
            location.href = '/?min=' + slider.value + '&max=' + sliderMax.value;
        })
    </script>
</body>

</html>